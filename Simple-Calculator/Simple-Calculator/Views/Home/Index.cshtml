<!DOCTYPE html>
<html>
<head>
    <title>Black Bulls Calculator</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #2c3e50;
            color: #ffffff;
            margin: 0;
            padding: 0;
        }

        .calculator {
            width: 600px; /* Adjust width as needed */
            margin: 50px auto;
            background-color: #34495e;
            border-radius: 20px;
            box-shadow: 0 0 40px rgba(0, 0, 0, 0.4);
            padding: 40px;
        }

            .calculator h2 {
                font-size: 36px; /* Adjust font size as needed */
                text-align: center;
                margin-bottom: 40px; /* Adjust margin as needed */
            }

            .calculator input[type="number"], .calculator select {
                width: calc(100% - 40px); /* Adjust width as needed */
                padding: 20px; /* Adjust padding as needed */
                margin-bottom: 30px; /* Adjust margin as needed */
                border-radius: 10px;
                border: none;
                background-color: #2c3e50;
                color: #ffffff;
                font-size: 24px; /* Adjust font size as needed */
            }

            .calculator button {
                width: calc(100% - 40px); /* Adjust width as needed */
                padding: 20px; /* Adjust padding as needed */
                border: none;
                border-radius: 10px;
                background-color: #16a085;
                color: #ffffff;
                font-size: 24px; /* Adjust font size as needed */
                cursor: pointer;
            }

                .calculator button:hover {
                    background-color: #1abc9c;
                }

        #result {
            margin-top: 30px; /* Adjust margin as needed */
            padding: 20px; /* Adjust padding as needed */
            border-radius: 10px;
            background-color: #2c3e50;
            font-size: 30px; /* Adjust font size as needed */
            text-align: center;
            color: #ffffff;
            font-weight: bold;
        }

        #history {
            margin-top: 40px; /* Adjust margin as needed */
            padding: 20px; /* Adjust padding as needed */
            border-radius: 10px;
            background-color: #2c3e50;
            font-size: 20px; /* Adjust font size as needed */
            color: #ffffff;
            max-height: 200px; /* Adjust max-height as needed */
            overflow-y: auto;
        }

            #history p {
                margin: 10px 0; /* Adjust margin as needed */
            }

        #clearHistory {
            margin-top: 30px; /* Adjust margin as needed */
            padding: 16px 20px; /* Adjust padding as needed */
            border: none;
            border-radius: 10px;
            background-color: #c0392b;
            color: #ffffff;
            font-size: 24px; /* Adjust font size as needed */
            cursor: pointer;
        }

            #clearHistory:hover {
                background-color: #e74c3c;
            }
    </style>
    <script>
        function calculate() {
            var num1 = parseFloat(document.getElementById('num1').value);
            var num2 = parseFloat(document.getElementById('num2').value);
            var operator = document.getElementById('operator').value;
            var result;

            switch (operator) {
                case '+':
                    result = num1 + num2;
                    break;
                case '-':
                    result = num1 - num2;
                    break;
                case '*':
                    result = num1 * num2;
                    break;
                case '/':
                    if (num2 !== 0) {
                        result = num1 / num2;
                    } else {
                        result = "Cannot divide by zero";
                    }
                    break;
                default:
                    result = "Invalid operator";
            }

            document.getElementById('result').innerHTML = "Result: " + result;

            // Add history
            var history = document.getElementById('history');
            var historyItem = document.createElement('p');
            historyItem.textContent = num1 + " " + operator + " " + num2 + " = " + result;
            history.appendChild(historyItem);
        }

        function clearHistory() {
            var history = document.getElementById('history');
            history.innerHTML = "";
        }
    </script>
</head>
<body>
    <div class="calculator">
        <h2>Black Bulls Calculator</h2>
        <input type="number" id="num1" placeholder="Enter number 1" /><br />
        <select id="operator">
            <option value="+">+</option>
            <option value="-">-</option>
            <option value="*">*</option>
            <option value="/">/</option>
        </select><br />
        <input type="number" id="num2" placeholder="Enter number 2" /><br />
        <button onclick="calculate()">Calculate</button><br />
        <div id="result"></div>
        <div id="history">
            <!-- History will be displayed here -->
        </div>
        <button id="clearHistory" onclick="clearHistory()">Clear History</button>
    </div>
</body>
</html>